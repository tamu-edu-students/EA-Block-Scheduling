<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :term, style: "display: block" %>
    <%= form.text_field :term %>
  </div>

  <div class="field">
    <%= form.label :dept_code, style: "display: block" %>
    <%= form.text_area :dept_code %>
  </div>

  <div class="field">
    <%= form.label :course_id, style: "display: block" %>
    <%= form.text_field :course_id %>
  </div>

  <div class="field">
    <%= form.label :sec_coreq_secs, style: "display: block" %>
    <%= form.text_field :sec_coreq_secs %>
  </div>

  <div class="field">
    <%= form.label :syn, style: "display: block" %>
    <%= form.text_field :syn %>
  </div>

  <div class="field">
    <%= form.label :sec_name, style: "display: block" %>
    <%= form.text_field :sec_name %>
  </div>

  <div class="field">
    <%= form.label :short_title, style: "display: block" %>
    <%= form.text_field :short_title %>
  </div>

  <div class="field">
    <%= form.label :im, style: "display: block" %>
    <%= form.number_field :im %>
  </div>

  <div class="field">
    <%= form.label :building, style: "display: block" %>
    <%= form.text_field :building %>
  </div>

  <div class="field">
    <%= form.label :room, style: "display: block" %>
    <%= form.text_field :room %>
  </div>

  <div class="field">
    <%= form.label :days, style: "display: block" %>
    <%= form.text_field :days %>
  </div>

