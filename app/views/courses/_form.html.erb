  <div class="field">
    <%= form.label :end_time, style: "display: block" %>
    <%= form.time_field :end_time %>
  </div>

  <div class="field">
    <%= form.label :fac_id, style: "display: block" %>
    <%= form.text_field :fac_id %>
  </div>

  <div class="field">
    <%= form.label :faculty_name, style: "display: block" %>
    <%= form.text_field :faculty_name %>
  </div>

  <div class="field">
    <%= form.label :crs_capacity, style: "display: block" %>
    <%= form.number_field :crs_capacity %>
  </div>

  <div class="field">
    <%= form.label :sec_cap, style: "display: block" %>
    <%= form.number_field :sec_cap %>
  </div>

  <div class="field">
    <%= form.label :student_count, style: "display: block" %>
    <%= form.number_field :student_count %>
  </div>

  <div class="field">
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_field :notes %>
  </div>

  <div class="field">
    <%= form.label :prerequisites %>
    <%= form.text_field :prerequisites, placeholder: "e.g., MATH-2413, PHYS-2425" %>
  </div>

  <div class="field">
    <%= form.label :corequisites %>
    <%= form.text_field :corequisites %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div class="action-container edit-actions">
    <%= form.button "Update", type: :update, class: "btn btn--primary" %>
