<h1>Selected Courses</h1>
<table>
  <thead>
  <tr>
    <th>Course Code</th>
    <th>Course Name</th>
    <th>Instructor</th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course[:course_code] %></td>
      <td><%= course[:name] %></td>
      <td><%= course[:instructor] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<!-- Generate Schedule Button -->
<div  style="display: block; margin: auto; width: 25%;">
  <button id="generate-schedule-button" class="btn--primary">Generate Schedule</button>
</div>

<!-- Hidden Banner for Generated Schedule -->
<div id="schedule-banner" style="display: block; margin: auto; width: 25%;">
  <p style="margin:auto;">2 schedules generated</p>
  <div class="action-container action-buttons" style="display: block; margin: auto; width: 100%">
    <%= link_to "Schedule 1", schedule_viewer_path, class: "btn--primary-alt" %> |
    <%= link_to "Schedule 2", schedule_viewer_path, class: "btn--primary-alt" %>
  </div>
</div>

<script>
    document.getElementById('generate-schedule-button').addEventListener('click', function () {
        // Simulate generating schedules and showing the banner
        const generatedSchedulesCount = 2; // Example count, you may replace this with actual logic
        document.getElementById('schedule-banner').innerHTML = `${generatedSchedulesCount} schedules generated <br> <a href="#">View Schedule 1</a> | <a href="#">View Schedule 2</a>`;
    });
</script>
