<h2>Users</h2>
<table class="table">
  <thead>
  <tr>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Role</th>
    <th>UID</th>
    <th>Provider</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td>
      <% unless user.roles.empty? %>
      <%= user.roles.map { |r| %Q(#{r.name})}.join(", ") %>
      <% end %>
    </td>
    <td><%= user.uid %></td>
    <td><%= user.provider %></td>
    <td>
      <%= link_to edit_user_path(user.id) do %>
        <i class="bi bi-pencil"></i>
      <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>