<div role="banner">
  <div class="hero hero--home">
    <% unless user_signed_in? %>
      <h4>Please sign in to access services</h4>
    <% end %>
    <div class="hero__image">
      <%= image_tag '/Aggie_Park_Exterior_AS_015.jpg' %>
    </div>
    <div class="hero__container">
      <h1>
        <span class="superhead">Howdy from </span>
        Texas A&M University
      </h1>
      <% unless user_signed_in? %>
        <div class="hero__content">
          <%= button_to "Login with Google", "/auth/google_oauth2", class: "btn btn--primary", data: { turbo: "false" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
